pipeline {
    agent any

    tools {
        maven 'LocalMaven'
    }

    stages {
        stage ('Build') {
            steps {
                /*For Mac & Linux machine */
                sh  'mvn clean --file /home/user1/java-tomcat-maven-example/*.pom package'
            }

            post{
                success{
                    echo 'Now Archiving ....'

                    archiveArtifacts artifacts : '**/target/*.war'
                }
            }
        }

        stage('Deploy Build in Staging Area'){
            steps{
            build job : 'Deploy-StagingArea-Pipeline'

            }
        }
     }
}
